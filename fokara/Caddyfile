# Caddyfile for Coolify static site serving
# This file tells Caddy how to serve your built React app

:80 {
    # Root directory - serve from dist folder
    root * /app/dist
    
    # Enable file server
    file_server
    
    # SPA routing - serve index.html for all routes
    try_files {path} /index.html
    
    # MIME types
    encode gzip
    
    # Set proper MIME types for JavaScript and CSS
    @js {
        path *.js
        path *.mjs
    }
    header @js Content-Type "application/javascript; charset=utf-8"
    
    @css {
        path *.css
    }
    header @css Content-Type "text/css; charset=utf-8"
    
    # Cache static assets
    @static {
        path *.jpg *.jpeg *.png *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot *.webp
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output stdout
        format json
    }
}
